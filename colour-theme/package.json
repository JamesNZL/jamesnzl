{
    "name": "colour-theme",
    "displayName": "JamesNZL",
    "description": "A darker, mellower Monokai.",
    "icon": "assets/icon.png",
    "version": "0.0.4",
    "repository": {
        "type": "git",
        "url": "https://github.com/JamesNZL/jamesnzl.git",
        "directory": "colour-theme"
    },
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Themes"
    ],
    "contributes": {
        "themes": [
            {
                "label": "JamesNZL",
                "uiTheme": "vs-dark",
                "path": "./themes/JamesNZL-color-theme.json"
            }
        ]
    },
    "devDependencies": {
        "standard-version": "^9.5.0"
    },
    "scripts": {
        "release": "standard-version --sign --commit-all --path . && npm run install-ext",
        "publish": "git push --follow-tags origin main",
        "install-ext": "code --install-extension releases/colour-theme-latest.vsix"
    },
    "standard-version": {
        "skip": {
            "tag": true
        },
        "scripts": {
            "postbump": "vsce package -o releases && vsce package -o releases/colour-theme-latest.vsix && git add releases"
        },
        "bumpFiles": [
            {
                "filename": "package.json",
                "type": "json"
            },
            {
                "filename": "package-lock.json",
                "type": "json"
            }
        ]
    }
}

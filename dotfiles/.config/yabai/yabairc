# Unload the macOS WindowManager process
launchctl unload -F /System/Library/LaunchAgents/com.apple.WindowManager.plist >/dev/null 2>&1 &

# run yabai
# ! note: must have configured sudo for this to work!
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# enable debug output
# yabai -m config debug_output on

# application rules
yabai -m rule --add app="^(Calculator|System Preferences|System Settings|Archive Utility|Finder|Raycast|CleanShot X)$" manage=off

# windows tiled (bsp), or left alone (float)
yabai -m config layout bsp

# yabai -m config --space 1 layout float

# spawn windows to the left
yabai -m config window_placement first_child

# auto balance when layout changes
# yabai -m config auto_balance on

# set padding and gaps
yabai -m config top_padding 12
yabai -m config bottom_padding 12
yabai -m config left_padding 12
yabai -m config right_padding 12
yabai -m config window_gap 12

# focus follows mouse, unless holding mouse modifier
yabai -m config mouse_modifier fn
yabai -m config focus_follows_mouse autofocus
yabai -m config mouse_follows_focus on

# mouse drop action stacks windows
yabai -m config mouse_drop_action stack

# disable window shadows for tiled windows
yabai -m config window_shadow float

# dim unfocused windows
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.875
yabai -m config window_opacity off

# focus window after active space changes
# yabai -m signal --add event=space_changed action="yabai -m window --focus \$(yabai -m query --windows --space | jq .[0].id)"

# focus window after active display changes
# yabai -m signal --add event=display_changed action="yabai -m window --focus \$(yabai -m query --windows --space | jq .[0].id)"

# mark window as scratchpad using rule and set size (scratchpad windows are manage=off automatically)
yabai -m rule --add app="^Finder$" scratchpad=finder grid=16:16:1:1:14:14
yabai -m rule --add app="^Warp$" scratchpad=warp grid=16:16:1:1:14:14
yabai -m rule --add app="^NordPass$" scratchpad=nordpass grid=16:16:1:1:14:14
yabai -m rule --add app="^Slack$" scratchpad=slack grid=16:16:1:1:14:14
yabai -m rule --add app="^Discord$" title!="^Discord Updater$" scratchpad=discord grid=16:16:1:1:14:14
yabai -m rule --add app="^Obsidian$" title="jamesnzl" scratchpad=obsidian grid=64:64:1:1:62:62
yabai -m rule --add app="^Mimestream$" scratchpad=mimestream grid=16:16:1:1:14:14
yabai -m rule --add app="^Calendar$" scratchpad=calendar grid=16:16:1:1:14:14
yabai -m rule --add app="^Timery$" scratchpad=timery grid=16:16:1:1:14:14
yabai -m rule --add app="^Arc$" scratchpad=arc grid=64:64:1:1:62:62
yabai -m rule --add app="^DevUtils$" scratchpad=devutils grid=16:16:1:1:14:14

yabai -m rule --apply

{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"version": 2,
	"console_title_template": "{{ .UserName }} @ {{ .HostName }} / {{ .Folder }}",
	"blocks": [
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "session",
					"style": "diamond",
					"foreground": "#caffbe",
					"leading_diamond": "<#bfa8bf>~</> ",
					"template": "{{ .HostName }}",
					"properties": {
						"display_host": true
					}
				},
				{
					"type": "git",
					"style": "diamond",
					"foreground": "#fdd0ff",
					"template": " <#ffffff>on</> {{ .HEAD }} {{ .BranchStatus }}{{ if .Working.Changed }} {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}",
					"properties": {
						"branch_icon": "\ue725 ",
						"fetch_stash_count": true,
						"fetch_status": true,
						"fetch_upstream_icon": true,
						"fetch_worktree_count": true
					}
				},
				{
					"type": "time",
					"style": "diamond",
					"foreground": "#fdd0ff",
					"template": " {{ .CurrentDate | date .Format }} ",
					"properties": {
						"time_format": "<#ffffff>at</> Monday 15:04:05"
					}
				}
			],
			"newline": true
		},
		{
			"type": "prompt",
			"alignment": "right",
			"segments": [
				{
					"type": "text",
					"style": "plain",
					"foreground": "#caffbe"
				},
				{
					"type": "executiontime",
					"style": "diamond",
					"foreground": "#caffbe",
					"template": "<#ffffff>\udb81\udcc5</> {{ .FormattedMs }}s ",
					"properties": {
						"style": "dallas",
						"threshold": 0
					}
				}
			],
			"overflow": "break"
		},
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "path",
					"style": "diamond",
					"foreground": "#cff9ff",
					"leading_diamond": "<#bfa8bf>~</>",
					"template": " \ue5ff  {{ .Path }} / ",
					"properties": {
						"folder_icon": "/",
						"folder_separator_icon": " / ",
						"home_icon": "home",
						"style": "agnoster_full"
					}
				}
			],
			"newline": true
		},
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "exit",
					"style": "plain",
					"foreground": "#8eff7f",
					"foreground_templates": [
						"{{ if gt .Code 0 }}#ef5350{{ end }}"
					],
					"template": "~ ",
					"properties": {
						"always_enabled": true
					}
				}
			],
			"newline": true
		}
	],
	"osc99": true
}